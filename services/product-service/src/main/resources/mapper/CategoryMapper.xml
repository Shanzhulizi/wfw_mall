<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lm.product.mapper.CategoryMapper">

    <!-- 查询所有分类 -->
    <select id="selectAll" resultType="com.lm.product.domain.Category">
        SELECT id, name, parent_id AS parentId, level, sort
        FROM product_category
        ORDER BY sort ASC
    </select>


</mapper>