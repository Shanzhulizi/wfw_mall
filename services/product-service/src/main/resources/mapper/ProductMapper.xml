<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lm.product.mapper.ProductMapper">

    <select id="selectAllAvailable" resultType="com.lm.product.dto.ProductPreloadDTO">
        SELECT id , stock FROM product_sku
        WHERE stock > 0
    </select>


<!--   结果类似于 SELECT * FROM product WHERE id IN (1, 2, 3)-->
    <select id="selectPriceValidationByIds" resultType="com.lm.product.dto.ProductPriceValidationDTO">
        select id as sku_id ,price ,spu_id
        from product_sku
        where id in
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


    <select id="selectProductById" resultType="com.lm.product.dto.ProductCartDTO">
        SELECT sku_name, price, image
        FROM product_sku
        WHERE id = #{skuId}
    </select>


    <select id="findRecommended" resultType="com.lm.product.dto.ProductRecommendDTO">
        SELECT
         id,name, description, main_image, sale_count
        FROM product_spu
        WHERE is_recommended = 1 and status = 1
        ORDER BY RAND()
        LIMIT #{size} OFFSET #{offset}
    </select>
</mapper>