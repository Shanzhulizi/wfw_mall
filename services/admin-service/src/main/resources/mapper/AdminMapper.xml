    <select id="selectByUsernameAndPassword" resultMap="userMap">
        SELECT private Long id;
        private
        String username;
    /**
     * 用户类型：
     * 0 - 普通用户
     * 1 - VIP用户
     * 2 - 商家
     */
    private
        Integer userType;

    /**
     * VIP到期时间，仅在 userType = 1 时有值
     */
    private
        LocalDateTime vipExpireTime;

    /**
     * 商户ID，仅在 userType = 2 时有值
     */
    private
        Long merchantId;


        FROM user WHERE username =
        #{username}
        AND
        password
        =
        #{password}
    </select>


    <insert id="insertAccountWithPhone" parameterType="com.lm.user.domain.User">
        INSERT INTO user (phone, user_type, create_time)
        VALUES (#{phone}, 0, #{createTime})
    </insert>


    <select id="selectByPhone" resultType="com.lm.user.dto.UserDTO">
        SELECT id,
               phone,
               user_type
        FROM user
        WHERE phone = #{phone}
    </select>


    <update id="updateUserByDTO" parameterType="com.lm.user.dto.UserUpdateDTO">
        UPDATE user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="userType != null">user_type = #{userType},</if>
            <if test="vipExpireTime != null">vip_expire_time = #{vipExpireTime},</if>
            <if test="merchantId != null">merchant_id = #{merchantId},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!--    ==============================================================-->


    <select id="selectById" resultMap="userMap">
        SELECT *
        FROM user
        WHERE id = #{id}
    </select>

    <select id="selectAll" resultMap="userMap">
        SELECT *
        FROM user
    </select>

    <select id="selectByUsername" resultMap="userMap">
        SELECT *
        FROM user
        WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.lm.user.domain.User">
        INSERT INTO user (username, password, phone, email, user_type, vip_expire_time, merchant_id, create_time)
        VALUES (#{username}, #{password}, #{phone}, #{email}, #{userType}, #{vipExpireTime}, #{merchantId},
                #{createTime})
    </insert>

